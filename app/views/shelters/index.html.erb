<div class="container-sidebar">
  <div class="row">

  <%# SIDEBAR ------------------------------- %>
    <div class="col-1 sidebar">
      <nav class="main-menu sidebar-yellow">
        <%= render "shared/sidebar" %> 
      </nav>
    </div>
    
  <%# CONTEÃšDO ------------------------------- %>
    <div class="col-11">
      <h1 class='text-center mt-5'>Shelters</h1>
      <div class="d-flex justify-content-center">
        <div class="line-orange"></div>
      </div>
      <div class="d-flex justify-content-center">

        <div class="card-deck row d-flex">
          <% @shelters.each do |shelter| %>
            <div class="col-sm-12 col-md-6 col-lg-4">
                <%= link_to shelter_path(shelter) do %>
                  <div class='d-flex justify-content-center align-items-center w-100' style="height: 300px;">
                    <img src="<%= cl_image_path shelter.photo.key %>" style="max-height: 300px; max-width: 300px; padding: 35px;" alt="">               
                  </div>
                <% end %>
              <div class="card card-shelter mb-5", style="min-height: 500px;">     
                <div class="card-body">
                  <h5 class="card-title" style="height: 50px;"><%= link_to shelter.name, shelter_path(shelter.id) %></h5>
                  <p class="card-text text-justify"><%= "#{shelter.description}" %></p>
                  <div class="card-fixed">
                    <%= link_to "Map to shelter!", shelter_path(shelter.id), class: "btn btn-secondary btn-sm", style: "border-radius: 0;" %>
                    <p class="card-text m-2"><small class=""> <%= shelter.address %></small></p> 
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div> 