<%= simple_form_for [ direct, message ] do |f| %>
  <%= f.input :content,
              label: false,
              as: :text,
              input_html: { 'rows': 3},
              placeholder: "write your message here!" %>
  <%= f.submit "Send message", class: 'btn btn-success btn-sm w-100 mt-1 mb-5 mr-3' %>
<% end %>