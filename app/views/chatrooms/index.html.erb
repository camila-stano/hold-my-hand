
<div class="container">

  <div class=" d-flex justify-content-between align-items-center">
    <h1 class = 'mt-3'>Chatrooms</h1>
    <div>
      <%= link_to 'Create group', new_chatroom_path, class:'btn btn-primary create-group-button mt-3' %>
    </div>
  </div>
  <ul>
  <%@chatrooms.each do |chatroom|%>
    <li>
      <%= link_to chatroom_path(chatroom, anchor: "message-#{@last_message.id - 4}") do %> 
        <%= chatroom.name %>
      <%end%>
    </li>
  <%end%>
  </ul>
  
</div>