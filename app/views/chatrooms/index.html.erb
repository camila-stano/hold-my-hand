<div class="container-sidebar">
  <div class="row">
  <%# SIDEBAR ------------------------------- %>
    <div class="col-1 sidebar">
      <nav class="main-menu sidebar-orange">
        <%= render "shared/sidebar" %> 
      </nav>
    </div>
  <%# CONTENT ------------------------------- %>
    <div class="col-11">
      <div class="container">


        <div class = 'row'>
          <div class = 'col-10'>
            <div class=" d-flex justify-content-between align-items-center">
              <h1 class = 'mt-3 text-center h1-index-chatroom'>Chatrooms</h1>
            </div>
            <div class='row'>
              <% @chatrooms.each do |chatroom| %>
                  <div class="col-sm-12 col-md-6 col-lg-4" style="">
                    <%= link_to chatroom_path(chatroom) do %> 
                      <div class="card mt-3 w-100" style="height: 170px; background-color: #243500; padding: 7px;">     
                        <div class="card-body" style="padding: 7px;">
                          <h5 class="card-title text-center"><%= chatroom.name %></h5>
                          <div class='text-center'>

                            <%if chatroom.photo.present?%>
                              <%= cl_image_tag current_user.photo.key, :transformation=>[
                              {:width=>550, :height=>550, :gravity=>"face", :radius=>"max", :crop=>"crop"}, {:width=>200, :crop=>"scale"}
                              ], class: "chatroom-img"%>
                            <%else%>
                              <%= image_tag "https://icon-library.com/images/default-profile-icon/default-profile-icon-16.jpg", class: "avatar dropdown-toggle" %>
                            <%end%>

                          </div>
                          <div class="d-flex justify-content-center">
                            <p class='mt-3' style="background-color: #578000; padding: 3px 10px; color: white; font-size: 0.85rem;">See more!</p>
                          </div>
                        </div>
                      </div>
                    <% end %>
                  </div>
              <% end %>
            </div>
          </div>

          <div class="col-2 ">

            <div class="chatroom-index-form">
              <%= render 'chatrooms/forms/form_create_group' %>
            </div>

          </div>
        </div>
        
      </div>
    </div>
  </div>
</div>