
<div class="container">

  <div class=" d-flex justify-content-between align-items-center">
    <h1 class = 'mt-3'>Chatrooms</h1>
  </div>

  <div class = 'row'>
    <div class = 'col-10'>
      <div>
      <%@chatrooms.each do |chatroom|%>
        <div>
          <%= link_to chatroom_path(chatroom, anchor: "message-#{@last_message.id}") do %> 
            <%= chatroom.name %>
          <%end%>
        </div>
      <%end%>
      </div>
    </div>
    <div class="col-2 chatroom-index-form">
      <% last_message = @chatrooms.includes(:messages).includes(:users).where(chatrooms: {direct: true}).where(users: {id: current_user.id}).order(messages: {created_at: :desc}) %>
      <% raise %>
      <%button_to direct_path(last_message)%>
      <%= render 'chatrooms/forms/form_create_group' %>

    </div>
  </div>
  
</div>