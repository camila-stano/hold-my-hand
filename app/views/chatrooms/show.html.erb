<div class="container d-flex justify-content-center">
  <div class="chat-container">
    <h1 class = 'mt-3' id = 'h1-chat-group'>Chat:<%= @chatroom.name %></h1>
    <div id="messages" class = 'mb-3' data-chatroom-id="<%= @chatroom.id %>">
      <% @chatroom.messages.each do |message| %>
        <%= render 'messages/chatroom_message', message: message %>
      <% end %>
    </div>
    <% if @chatroom.users.include? current_user %>
      <%= simple_form_for [ @chatroom, @message ], remote: true do |f| %>
        <%= f.input :content,
                    label: false,
                    as: :text,
                    input_html: { 'rows': 3},
                    placeholder: "write your message here!" %>
        <%= f.submit "Send message", class: 'btn btn-success mt-3 mb-5 mr-3 btn-create send-message-chat' %>
      <% end %>
    <% else %>  
      <%= button_to 'Participar da conversa', chatroom_add_member_path(@chatroom) %>
    <% end %>
  </div>
</div>