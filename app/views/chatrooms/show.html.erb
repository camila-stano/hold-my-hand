<div class="container d-flex justify-content-center row">

  <div class="col-2 mt-3">
    <h4 class = 'h4-chatroom'> Outros grupos </h4>
    <%@chatrooms.each do |chatroom|%>
      <div class = 'chatroom-show-all-groups'>
        <%= link_to chatroom_path(chatroom, anchor: "message-#{@last_message.id}") do %> 
          <%= chatroom.name %>
        <%end%>
      </div>
    <%end%>
  </div>

  <div class="col-8">
    <div class="chat-container">
      <h1 class = 'mt-3' id = 'h1-chat-group'>Chat:<%= @chatroom.name %></h1>
      <div id="messages" class = 'mb-3' data-chatroom-id="<%= @chatroom.id %>">
        <% @chatroom.messages.each do |message| %>
          <%= render 'messages/chatroom_message', message: message %>
        <% end %>
      </div>
      <% if @chatroom.users.include? current_user %>
        <%= simple_form_for [ @chatroom, @message ], remote: true do |f| %>
          <%= f.input :content,
                      label: false,
                      as: :text,
                      input_html: { 'rows': 3},
                      placeholder: "write your message here!" %>
          <%= f.submit "Send message", class: 'btn btn-success mt-3 mb-5 mr-3 btn-create send-message-chat' %>
        <% end %>
      <% else %>  
        <%= button_to 'Participar da conversa', chatroom_add_member_path(@chatroom) %>
      <% end %>
    </div>
  </div>

  <div class="col-2">
    <div>
    <%@chatroom.users.each do |user|%>
      <div>
        <%= render "chatrooms/avatar/talking_user", talking_user: user %>
        <%=link_to direct_path(user) do %> 
          <%= user.nickname %>
        <%end%>
        <hr class = 'hr-chatroom'>
      </div>
    <%end%>
    </div>
  </div>
</div>