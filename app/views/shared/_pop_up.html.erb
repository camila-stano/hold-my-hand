<!-- Modal -->
<div class="modal fade" id="pop-up-home" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body"> 
        <div class="pop-up">
          <div class="row title text-center">
            <div class="col-12">
              <h2>Hold My Hand</h2>
            </div>
            <div class="col-12">
              <h6>A SÃ£o Paulo guide for refugees!</h6>
            </div>    
          </div>

          <div class="row box mt-3 " >
            <div class="col-3 d-flex align-items-center " >
              <%= link_to shelters_path do %>
                <i class="fas fa-home" ></i> 
              <% end %>
            </div>
            <div class="col-8 ">
              <h6>Find a place to stay!</h6>
            </div>    
          </div>

          <div class="row box mt-3">
            <div class="col-8 ">
              <h6>Find a place to eat!</h6>
            </div>    
            <div class="col-3 ">
              <%= link_to restaurants_path do %>
                <i class="fas fa-utensils"></i>
              <% end %>
            </div>
          </div>

          <div class="row box mt-3">
            <div class="col-3 ">
              <%= link_to  documents_path do %>
                <i class="fas fa-passport"></i>
              <% end %>
            </div>
            <div class="col-8 ">
              <h6>Which documents, and how you can get then!</h6>
            </div>    
          </div>

          <div class="row box mt-3">
            <div class="col-8 ">
              <h6>Meet others refugees in Brazil!</h6>
            </div>    
            <div class="col-3 ">
              <i class="fas fa-comments"></i>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>