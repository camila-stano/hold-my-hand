<div class="navbar sticky-top navbar-expand-sm navbar-light navbar-lewagon">
  <h2><strong><%= link_to "Hold My Hand", root_path, class: "navbar-brand" %></strong></h2>

  <div class = 'language-choice-container'>
    <div class='language-icons'>
      <ul class = 'language-choice-list mr-4'>
    
        <%= link_to root_path(locale: :en) do %>
          <%= cl_image_tag("https://res.cloudinary.com/dn6lyapiu/image/upload/v1614787101/united-states_mznig2.svg", 
                          width: 25, height: 25, crop: :thumb) %>
        <% end %>
        <%= link_to root_path(locale: :es) do %>
          <%= cl_image_tag("https://res.cloudinary.com/dn6lyapiu/image/upload/v1614787874/spain_tmtxoi.svg", 
                          width: 25, height: 25, crop: :thumb) %>
        <% end %>
          <%= link_to root_path(locale: :"pt-BR") do %>
          <%= cl_image_tag("https://res.cloudinary.com/dn6lyapiu/image/upload/v1614787871/brazil_ln0unu.svg", 
                          width: 25, height: 25, crop: :thumb) %>
        <% end %>

      </ul>
    </div>
  </div>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item d-flex align-items-center">
          <p><%= current_user.first_name %></p>
        </li>
        <li class="nav-item dropdown">
          <%= render "shared/avatar", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Profile", profile_path(current_user), class: "dropdown-item" %>
            <%= link_to "Edit Registration", edit_user_registration_path(current_user), class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
