<div class="scrollbar" id="style-1">
  <ul>
    <% if current_user %>
      <%= link_to profile_path(current_user) do %>
        <li class="mt-3">
          <div class="row-sidebar">
            <i class="fa fa-user fa-lg"></i><span class="nav-text">Check your profile</span></a>
          </div>
        </li>   
      <% end %> 
    <% else %>
      <%= link_to new_user_session_path do %>
        <li class="mt-3">
          <div class="row-sidebar">
            <i class="fa fa-user fa-lg"></i><span class="nav-text">Log in</span></a>
          </div>
        </li>   
      <% end %> 
    <% end %> 

    <%= link_to shelters_path do %>
      <li class="mt-3">
        <div class="row-sidebar">
          <i class="fa fa-home fa-lg"></i><span class="nav-text">Find a shelter</span></a>
        </div>
      </li>
    <% end  %> 

    <%= link_to restaurants_path do %>
      <li class="mt-3">
        <div class="row-sidebar">
        <i class="fa fa-utensils fa-lg"></i><span class="nav-text">Find a restaurant</span></a>
      </div>
      </li>
    <% end  %> 

    <%= link_to maps_path do %>
    <li class="mt-3">
      <div class="row-sidebar">
        <i class="fa fa-map-marker-alt fa-lg"></i><span class="nav-text">Real-time map</span></a>
      </div>
    </li>
    <% end  %> 

    <%= link_to documents_path do %>
    <li class="mt-3">
      <div class="row-sidebar">
        <i class="fa fa-passport fa-lg"></i><span class="nav-text">Get your documents</span></a>
      </div>
    </li>
    <% end  %> 

    <%= link_to lawyers_path do %>
    <li class="mt-3">
      <div class="row-sidebar">
        <i class="fa fa-gavel fa-lg"></i><span class="nav-text">Find a lawyer</span></a>
      </div>
    </li>
    <% end  %> 

    <%= link_to directs_path do %>
    <li class="mt-3">
      <div class="row-sidebar">
        <i class="fa fa-comments fa-lg"></i><span class="nav-text">Your messages</span></a>
      </div>
    </li>
