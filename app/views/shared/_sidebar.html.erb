              <%= link_to "Log to see more", new_user_session_path, class: 'my-2 py-2' %>
            </div>
          </div>
        <% end %>  
        
        <%= link_to maps_path do  %>   
          <div class="item-sidebar d-inline-flex align-items-center">
            <div class='d-inline-flex align-items-center'>
              <div class='mx-4'><i class="fas fa-map-marker-alt"></i></div>
              <%= link_to "Real-time map", maps_path, class: 'my-2 py-2' %>
            </div>
          </div>
        <% end %>  
        
        <%= link_to shelters_path do  %>   
          <div class="item-sidebar d-inline-flex align-items-center">
            <div class='d-inline-flex align-items-center'>
              <div class='mx-4'><i class="fas fa-home"></i></div>
