<div class="container form-container my-5">
  <h2 class='text-center title-form'>Sign up</h2>

  <%= simple_form_for @profile, url: profiles_path, method: :post do |f| %>

  <div class="form-inputs">
    
    <%= f.input :nickname,
                placeholder: 'Nickname',
                label: false %>
    <div class="row">
      <div class="col-6 form-sigin-l">
        <%= f.input :gender,
                    placeholder: 'How would you want to be treated?',
                    collection:User::GENDER,
                    hint: ('How would you want to be treated?'),
                    label: false %>
      </div>
      <div class="col-6 form-sigin-r">
        <%= f.input :age,
                    placeholder: 'Age',
                    label: false %>
      </div>
    </div>
    <%= f.input :language,
                placeholder: 'Language',
                label: false %> 
    <%= f.input :arrived,
                hint: ('Since when are you in Brazil?'),                
                label: false %>       
    <%= f.input :current_address,
                placeholder: 'Current Address',
                label: false %>
    <%= f.input :got_job,
                hint: ('Got a Job? Mark here'),
                label: false %>
    <%= f.input :studying_pt,
                hint: ('Doing Portuguese classes? Mark here'),
                label: false %>
    <%= f.input :document,
                hint: ('Got your first brazilian document? Mark here'),
                label: false %>
    <%# <%= f.input :photo, as: :file, 
                placeholder: 'Profile Picture',
                input_html: { class: 'd-none' }, 
                label_html: { class: 'upload-photo'},
                label: 'Choose a profile photo' %>
  </div>
 
    <div class="row align-items-center mt-3">
      <div class='col-12'>
        <%= f.button :submit, "Update your profile", class: 'btn btn-success btn-form w-100' %>
      </div>
    </div>

  <% end %>
  </div>