<% if message.user == current_user %>
  <div class="direct-to-right direct-chat mb-2 mr-3">
  <%else%>
  <div class="direct-to-left direct-chat mb-2 ml-3">
<% end %>
    <div class="direct-container ml-3" id="direct-<%= message.id %>">
      <i class="author">
        <span class = 'nickname-direct'><%= message.user.nickname %></span>
        <small class = 'chat-date-hour'><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
      </i>
      <p class = 'text-direct mb-2'><%= message.content %></p>
    </div>
  </div>

