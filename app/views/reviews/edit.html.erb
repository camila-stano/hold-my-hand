<div class="container form-container my-5">
    <h2 class='text-center title-form'>Leave a Review</h2>
    <%= simple_form_for @review do |f| %>
      <%= f.input :content %>
      <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5] %>
      <%= f.submit class: 'btn btn-dark mb-3' %>
    <% end %>
</div>