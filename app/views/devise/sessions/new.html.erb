<div class="container form-container my-5">
  <h2 class='text-center title-form'>Log in</h2>


  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                placeholder: 'Email',
                label: false,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                placeholder: 'Password',
                label: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

    <%= f.button :submit, "Login", class: 'btn btn-outline-primary btn-form rounded' %>
  <% end %>
  <div class="text-center">
  <hr>
    <%= link_to "Forgot password?", new_password_path(resource_name), class: 'forgot-password' %> Â· <%= link_to "Create your account", new_registration_path(resource_name), class: 'forgot-password' %>
  </div>

<%#------------------------------ SIGN in WITH FACEBOOK ------------------------------%>
  <div class="text-center facebook-button text-center rounded mt-3">
    <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, method: :post, class: 'btn facebook-btn-link' %>
  </div>
</div>
