<div class="container form-container my-5">
  <h2 class = 'mb-3'>Cadastro de advogado</h2>
  <%= simple_form_for(@lawyer) do |f| %>
  <div class="form-inputs">
        <%= f.input :name,
                    required: true,
                    placeholder: 'Name',
                    label: false,
                    autofocus: true %>
        <%= f.input :oab,
                    placeholder: 'OAB',
                    label: false %>
        <%= f.input :address,
                    placeholder: 'Address',
                    label: false %>
        <%= f.input :phone,
                    placeholder: 'Phone',
                    label: false %>
        <%= f.input :area,
                    placeholder: 'area of expertise',
                    label: false %>
        <%= f.input :description,
                    as: :text,
                    input_html: { 'rows': 5},
                    label: 'Write about you and your professional experiences' %>
        <%= f.input :photo, as: :file, label: 'Foto de perfil' %>
        <%= f.submit "Solicitar cadastro", class: 'btn btn-success mt-3 btn-create' %>
      </div>

    <% end %>
</div>