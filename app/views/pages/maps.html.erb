<div class="container">
  <div class="map-index my-5 d-flex justify-content-center">

    <div data-controller="position">
      <div data-position-target="user"><%= current_user && '6000' %></div>
    </div>

    <div id="map"
      style="width: 100%; height: 500px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>

  </div>  
</div>
