      <%= link_to shelters_path do %>
        <i class="fas fa-comments i-large"></i>
      <% end %>
    </div>
    <div class="col-8 d-flex align-content-center justify-content-around flex-wrap">
      <h1 class="">LOGIN TO ACCESS THE COMMUNIT</h1>
    </div>
  </div>
</div>

<%# DOCUMENTS -------------------------- %>
<div class="banner-content-darkness d-flex justify-content-around">
  <div class="row d-flex justify-content-around align-content-center w-100 ">
    <div class="col-4">
      <%= link_to new_user_session_path do %>
        <i class="fas fa-comments i-large"></i>
      <% end %>
    </div>
    <div class="col-8 d-flex align-content-center justify-content-around flex-wrap">
